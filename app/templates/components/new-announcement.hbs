{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Announcement:</label>
        {{input value=body id="body"}}
      </div>

      <button {{action 'saveAnnouncement1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
